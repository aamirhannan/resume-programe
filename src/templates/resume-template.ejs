<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume</title>
    <style>
        /* Base Settings */
        :root {
            --base-font-size: 11pt;
            --line-height: 1.3;
            --margin-bottom: 6pt;
        }

        @page {
            size: A4;
            margin: 0.5in 0.5in;
        }

        body {
            font-family: 'Cambria', 'Georgia', 'Times New Roman', serif;
            font-size: var(--base-font-size);
            line-height: var(--line-height);
            color: #000;
            margin: 0;
            padding: 0;
            -webkit-font-smoothing: antialiased;
        }

        a {
            color: #000;
            text-decoration: none;
        }

        /* Header */
        .header {
            text-align: center;
            margin-bottom: 12pt;
        }

        .name {
            font-size: 24pt;
            font-weight: normal;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-family: 'Times New Roman', serif;
        }

        .contact-info {
            font-size: 10pt;
            margin-top: 4pt;
        }

        .contact-separator {
            margin: 0 4px;
            font-size: 8pt;
            vertical-align: middle;
        }

        /* Sections */
        .section {
            margin-bottom: 10pt;
        }

        .section-header {
            font-family: 'Times New Roman', serif;
            font-size: 12pt;
            font-weight: bold;
            text-transform: uppercase;
            border-bottom: 1px solid #000;
            margin-bottom: 6pt;
            padding-bottom: 2pt;
        }

        /* Content Blocks */
        .entry {
            margin-bottom: 6pt;
        }

        .entry-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
        }

        .entry-title {
            font-weight: bold;
            font-size: 11pt;
        }

        .entry-date {
            font-style: italic;
            font-size: 10pt;
            text-align: right;
        }

        .entry-subtitle {
            display: flex;
            justify-content: space-between;
            font-style: italic;
            font-size: 10pt;
            margin-bottom: 2pt;
        }

        /* Lists */
        ul {
            margin: 2pt 0 0 18pt;
            padding: 0;
            list-style-type: disc;
        }

        li {
            margin-bottom: 2pt;
            text-align: justify;
        }

        /* Skills */
        .skills-list {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .skill-category {
            margin-bottom: 2pt;
        }

        .skill-label {
            font-weight: bold;
        }

        /* Print adjustments */
        @media print {
            body {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
        }
    </style>
</head>

<body>
    <div id="resume-container">
        <!-- Header -->
        <div class="header">
            <div class="name">
                <%= header.fullName %>
            </div>
            <div class="contact-info">
                <% if (header.contact.phone) { %>
                    <span>
                        <%= header.contact.phone %>
                    </span>
                    <span class="contact-separator">♦</span>
                    <% } %>
                        <% if (header.contact.location) { %>
                            <span> 
                                <%= header.contact.location %>
                            </span>
                            <span class="contact-separator">♦</span>
                            <% } %>
                                <% if (header.contact.email) { %>
                                    <a target="_blank" href="mailto:<%= header.contact.email %>">
                                        <%= header.contact.email %>
                                    </a>
                                    <% } %>
                                        <% if (header.contact.links) { %>
                                            <% Object.entries(header.contact.links).forEach(([key, value])=> { %>
                                                <span class="contact-separator">♦</span>
                                                <a target="_blank" href="<%= value %>" target="_blank">
                                                    <%= key.charAt(0).toUpperCase() + key.slice(1) %>
                                                </a>
                                                <% }); %>
                                                    <% } %>
            </div>
        </div>

        <!-- Professional Summary -->
        <% if (professionalSummary) { %>
            <div class="section">
                <div class="section-header">Professional Summary</div>
                <div style="text-align: justify;">
                    <%= professionalSummary %>
                </div>
            </div>
            <% } %>

                <!-- Experience -->
                <% if (experience && experience.length> 0) { %>
                    <div class="section">
                        <div class="section-header">Experience</div>
                        <% experience.forEach(job=> { %>
                            <div class="entry">
                                <div class="entry-header">
                                    <span class="entry-title">
                                        <%= job.role %>
                                    </span>
                                    <span class="entry-date">
                                        <%= job.duration.start %> – <%= job.duration.end %>
                                    </span>
                                </div>
                                <div class="entry-subtitle">
                                    <span>
                                        <%= job.company %>
                                    </span>
                                    <span>
                                        <% if (job.location) { %>
                                            <%= job.location %>
                                                <% } %>
                                                    <% if (job.location && job.employmentType) { %>, <% } %>
                                                            <% if (job.employmentType) { %><em>
                                                                    <%= job.employmentType.toLowerCase() %>
                                                                </em>
                                                                <% } %>
                                    </span>
                                </div>
                                <% if (job.responsibilitiesAndAchievements) { %>
                                    <ul>
                                        <% job.responsibilitiesAndAchievements.forEach(bullet=> { %>
                                            <li><%- bullet %></li>
                                            <% }); %>
                                    </ul>
                                    <% } %>
                            </div>
                            <% }); %>
                    </div>
                    <% } %>

                        <!-- Technical Skills -->
                        <% if (technicalSkills && Object.keys(technicalSkills).length> 0) { %>
                            <div class="section">
                                <div class="section-header">Technical Skills</div>
                                <ul class="skills-list">
                                    <% Object.entries(technicalSkills).forEach(([category, skills])=> { %>
                                        <li class="skill-category">
                                            <span class="skill-label">
                                                <%= category.replace(/([A-Z])/g, ' $1' ).replace(/^./, str=>
                                                    str.toUpperCase()) %>:
                                            </span>
                                            <span>
                                                <%= Array.isArray(skills) ? skills.join(', ') : skills %></span>
                    </li>
                <% }); %>
            </ul>
        </div>
        <% } %>

        <!-- Education -->
        <% if (education) { %>
        <div class="section">
            <div class="section-header">Education</div>
            <div class="entry">
                <div class="entry-header">
                    <span class="entry-title"><%= education.degree %></span>
                    <span class="entry-date">
                         <%= education.duration.start %> – <%= education.duration.end %>
                    </span>
                </div>
                <div class="entry-subtitle">
                    <span><%= education.institution %></span>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Projects -->
        <% if (projects && projects.length > 0) { %>
        <div class="section">
            <div class="section-header">Projects</div>
            <% projects.forEach(project => { %>
                <div class="entry">
                    <div class="entry-header">
                        <span class="entry-title">
                            <%= project.title %>
                            <% if (project.links && project.links.live) { %>
                                <a target="_blank" href="<%= project.links.live %> " style="font-weight: normal; font-size: 9pt; color: #0000EE;">[Live]</a>
                            <% } %>
                        </span>
                        <span><!-- Optional Project Date --></span>
                    </div>
                    <% if (project.description) { %>
                        <ul>
                            <% project.description.forEach(bullet => { %>
                                <li><%- bullet %></li>
                            <% }); %>
                        </ul>
                    <% } %>
                </div>
            <% }); %>
        </div>
        <% } %>
    </div>

    <!-- Layout Normalizer (Single Page Enforcer) -->
    <script>
        const TARGET_HEIGHT = 1030;
        const MIN_FONT_SIZE = 9;

        function normalizeLayout() {
            const container = document.body;
            let currentFontSize = parseFloat(getComputedStyle(container).getPropertyValue(' --base-font-size')) || 11;
            while (container.scrollHeight > TARGET_HEIGHT && currentFontSize >
                MIN_FONT_SIZE) {
                currentFontSize -= 0.2;
                container.style.setProperty('--base-font-size',
                    `${currentFontSize}pt`);

                if (currentFontSize < 10) {
                    container.style.setProperty('--line-height', '1.2');
                    container.style.setProperty('--margin-bottom', '4pt');
                }
            }
            document.body.setAttribute('data-normalized', 'true');
        }
        window.onload = normalizeLayout; </script>
</body>

</html>